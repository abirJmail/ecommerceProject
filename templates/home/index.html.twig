{% extends 'base.html.twig' %}

{% block carousel %}{% endblock %}

{% block content %}
	<h2 class="title">Nos meilleures ventes</h2>
    <hr class="featurette-divider">
	<div class="isBest ">
			<img class=" isBestIMG " src="/uploads/{{ products[0].illustration }}" alt="{{ products[0].name }}" class="img-fluid">
